<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane blendMode="DARKEN" depthTest="DISABLE" pickOnBounds="false" prefHeight="267.0" prefWidth="570.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <top>
      <ToolBar prefHeight="41.0" prefWidth="570.0" BorderPane.alignment="CENTER">
         <items>
            <RadioButton fx:id="$30MinRadio" mnemonicParsing="false" text="30 min ">
               <toggleGroup>
                  <ToggleGroup fx:id="timeGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="$45MinRadio" mnemonicParsing="false" text="45 min" toggleGroup="$timeGroup" />
            <RadioButton fx:id="$60MinRadio" mnemonicParsing="false" text="60 min" toggleGroup="$timeGroup" />
            <Separator orientation="VERTICAL" prefHeight="35.0" />
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#startButtonClick" text="Start" />
            <Button mnemonicParsing="false" onAction="#stopButtonClick" text="Stop" />
            <Separator orientation="VERTICAL" prefHeight="30.0" />
            <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pauseButtonClick" text="Pause" />
            <Button fx:id="resumeButton" mnemonicParsing="false" onAction="#resumeButtonClick" text="Resume" />
            <Separator orientation="VERTICAL" prefHeight="30.0" />
            <Button mnemonicParsing="false" text="Settings" />
         </items>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </ToolBar>
   </top>
   <effect>
      <ColorAdjust brightness="-0.04">
         <input>
            <InnerShadow />
         </input>
      </ColorAdjust>
   </effect>
   <center>
      <Label fx:id="timeLabel" text="TIME" BorderPane.alignment="CENTER">
         <font>
            <Font size="54.0" />
         </font>
      </Label>
   </center>
</BorderPane>
